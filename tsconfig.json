{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@assets/*": [
        "./assets/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@instances": [
        "./api/instances.ts"
      ],
      "@models/*": [
        "./models/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@api/*": [
        "./api/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@mocks/*": [
        "./mocks/*"
      ],
      "@layouts/*": [
        "./layouts/*"
      ],
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}